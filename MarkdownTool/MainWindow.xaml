<ui:FluentWindow x:Class="MarkdownTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarkdownTool"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Markdown 编辑器" 
        Height="960" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        Background="White"
        Icon="logo/logo.ico">
    <ui:FluentWindow.Resources>
        <local:BoolToIconConverter x:Key="BoolToIconConverter"/>
        
        <!-- 全局字体样式 -->
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Microsoft YaHei UI, Segoe UI, Arial"/>
        </Style>
        
        <!-- 标题字体样式 -->
        <Style x:Key="TitleTextStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Microsoft YaHei UI, Segoe UI, Arial"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
        
        <!-- 编辑器字体样式 -->
        <Style x:Key="EditorTextStyle" TargetType="{x:Type TextBox}">
            <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Courier New"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <!-- 状态栏字体样式 -->
        <Style x:Key="StatusTextStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Microsoft YaHei UI, Segoe UI, Arial"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
        
        <!-- 树视图字体样式 -->
        <Style x:Key="TreeTextStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Microsoft YaHei UI, Segoe UI, Arial"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <!-- 菜单字体样式 -->
        <Style TargetType="{x:Type MenuItem}">
            <Setter Property="FontFamily" Value="Microsoft YaHei UI, Segoe UI, Arial"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </ui:FluentWindow.Resources>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <ui:TitleBar Grid.Row="0" Title="Markdown 编辑器" ShowMaximize="True" ShowMinimize="True"/>

        <DockPanel Grid.Row="1">
            <!-- 顶部菜单栏 -->
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="文件(_F)">
                    <MenuItem Header="新建(_N)" Click="NewFile_Click" InputGestureText="Ctrl+N"/>
                    <MenuItem Header="打开文件(_O)" Click="OpenFile_Click" InputGestureText="Ctrl+O"/>
                    <MenuItem Header="打开文件夹(_F)" Click="OpenFolder_Click" InputGestureText="Ctrl+Shift+O"/>
                    <Separator/>
                    <MenuItem Header="保存(_S)" Click="SaveFile_Click" InputGestureText="Ctrl+S"/>
                    <MenuItem Header="另存为(_A)" Click="SaveAsFile_Click" InputGestureText="Ctrl+Shift+S"/>
                    <Separator/>
                    <MenuItem Header="退出(_X)" Click="Exit_Click"/>
                </MenuItem>
                <MenuItem Header="编辑(_E)">
                    <MenuItem Header="撤销(_U)" Click="Undo_Click" InputGestureText="Ctrl+Z"/>
                    <MenuItem Header="重做(_R)" Click="Redo_Click" InputGestureText="Ctrl+Y"/>
                    <Separator/>
                    <MenuItem Header="剪切(_T)" Click="Cut_Click" InputGestureText="Ctrl+X"/>
                    <MenuItem Header="复制(_C)" Click="Copy_Click" InputGestureText="Ctrl+C"/>
                    <MenuItem Header="粘贴(_P)" Click="Paste_Click" InputGestureText="Ctrl+V"/>
                </MenuItem>
                <MenuItem Header="帮助(_H)">
                    <MenuItem Header="关于(_A)" Click="About_Click"/>
                </MenuItem>
            </Menu>

            <!-- 状态栏 -->
            <StatusBar DockPanel.Dock="Bottom" Height="26" Padding="4,0">
                <StatusBarItem>
                    <ui:Button x:Name="ToggleSidebarButton" 
                              Icon="{ui:SymbolIcon PanelLeft24}" 
                              Click="ToggleSidebar_Click" 
                              ToolTip="切换侧边栏"
                              Appearance="Secondary"
                              Padding="4,2"
                              Height="20"/>
                </StatusBarItem>
                <Separator/>
                <StatusBarItem>
                    <ui:Button x:Name="ToggleViewButton" 
                              Icon="{ui:SymbolIcon SplitVertical24}" 
                              Click="ToggleView_Click" 
                              ToolTip="切换视图"
                              Appearance="Secondary"
                              Padding="4,2"
                              Height="20"/>
                </StatusBarItem>
                <Separator x:Name="TocButtonSeparator" Visibility="Collapsed"/>
                <StatusBarItem x:Name="TocButtonItem" Visibility="Collapsed">
                    <ui:Button x:Name="ToggleTocButton" 
                              Icon="{ui:SymbolIcon DocumentBulletList24}" 
                              Click="ToggleToc_Click" 
                              ToolTip="切换目录"
                              Appearance="Secondary"
                              Padding="4,2"
                              Height="20"/>
                </StatusBarItem>
                <StatusBarItem HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="LineColumnText" Text="行: 1, 列: 1" Style="{StaticResource StatusTextStyle}" Margin="0,0,10,0"/>
                        <Separator Margin="0,0,10,0"/>
                        <TextBlock x:Name="WordCountText" Text="字数: 0" Style="{StaticResource StatusTextStyle}"/>
                    </StackPanel>
                </StatusBarItem>
            </StatusBar>

             <!-- 主要内容区域 -->
             <Grid x:Name="MainGrid" Margin="0">
                 <Grid.ColumnDefinitions>
                     <ColumnDefinition x:Name="SidebarColumn" Width="250" MinWidth="150"/>
                     <ColumnDefinition x:Name="SidebarSplitterColumn" Width="5"/>
                     <ColumnDefinition Width="*"/>
                 </Grid.ColumnDefinitions>

                 <!-- 侧边栏 - 文件浏览器 -->
                 <Border x:Name="SidebarBorder" Grid.Column="0" Margin="5,0,0,0" 
                         Background="{DynamicResource CardBackground}"
                         CornerRadius="0"
                         BorderBrush="{DynamicResource CardBorderBrush}"
                         BorderThickness="0">
    <Grid>
                         <Grid.RowDefinitions>
                             <RowDefinition Height="Auto"/>
                             <RowDefinition Height="*"/>
                         </Grid.RowDefinitions>
                         
                        <Grid Grid.Row="0" Margin="15,10,15,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                  Text="文件浏览器" 
                                  Style="{StaticResource TitleTextStyle}"
                                  VerticalAlignment="Center"/>
                            <ui:Button Grid.Column="1"
                                   Icon="{ui:SymbolIcon FolderOpen20}"
                                   Click="OpenFolder_Click"
                                   ToolTip="打开文件夹"
                                   Appearance="Secondary"/>
                        </Grid>
                        
                        <TreeView x:Name="FileTreeView"
                             Grid.Row="1"
                             BorderThickness="0"
                             Background="Transparent"
                             Margin="10,0,10,10"
                             SelectedItemChanged="FileTreeView_SelectedItemChanged">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="{x:Type TreeViewItem}" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                                    <EventSetter Event="Expanded" Handler="TreeViewItem_Expanded"/>
                                </Style>
                            </TreeView.ItemContainerStyle>
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                    <StackPanel Orientation="Horizontal" Margin="2">
                                        <TextBlock Text="{Binding IsDirectory, Converter={StaticResource BoolToIconConverter}}" 
                                              Margin="0,0,8,0"
                                              FontSize="15"
                                              VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Name}"
                                              VerticalAlignment="Center"
                                              Style="{StaticResource TreeTextStyle}"/>
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
    </Grid>
                 </Border>

                 <!-- 侧边栏分隔条 -->
                 <GridSplitter x:Name="SidebarSplitter" Grid.Column="1"
                          Width="5" 
                          HorizontalAlignment="Stretch" 
                          Background="Transparent"/>

                 <!-- 右侧内容区域 -->
                 <Grid Grid.Column="2">
                     <Grid.RowDefinitions>
                         <RowDefinition Height="Auto"/>
                         <RowDefinition Height="*"/>
                     </Grid.RowDefinitions>
                     
                    <!-- 工具栏 (放在右侧顶部) -->
                    <Border Grid.Row="0" Margin="5,0,10,5" 
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="5">
                        <DockPanel LastChildFill="False">
                            <!-- 标题 -->
                            <ui:Button DockPanel.Dock="Left" Icon="{ui:SymbolIcon TextParagraph24}" Content="标题" Margin="0,0,5,0" Click="ParagraphButton_Click" x:Name="ParagraphButton">
                                <ui:Button.ContextMenu>
                                    <ContextMenu x:Name="ParagraphMenu">
                                        <MenuItem Header="一级标题 (H1)" Click="InsertH1_Click"/>
                                        <MenuItem Header="二级标题 (H2)" Click="InsertH2_Click"/>
                                        <MenuItem Header="三级标题 (H3)" Click="InsertH3_Click"/>
                                        <MenuItem Header="四级标题 (H4)" Click="InsertH4_Click"/>
                                        <MenuItem Header="五级标题 (H5)" Click="InsertH5_Click"/>
                                        <MenuItem Header="六级标题 (H6)" Click="InsertH6_Click"/>
                                    </ContextMenu>
                                </ui:Button.ContextMenu>
                            </ui:Button>
                            
                            <!-- 文本格式 -->
                            <ui:Button DockPanel.Dock="Left" Icon="{ui:SymbolIcon TextBold24}" Content="格式" Margin="0,0,5,0" Click="FormatButton_Click" x:Name="FormatButton">
                                <ui:Button.ContextMenu>
                                    <ContextMenu x:Name="FormatMenu">
                                        <MenuItem Header="粗体" Click="InsertBold_Click" InputGestureText="Ctrl+B"/>
                                        <MenuItem Header="斜体" Click="InsertItalic_Click" InputGestureText="Ctrl+I"/>
                                        <MenuItem Header="删除线" Click="InsertStrikethrough_Click"/>
                                    </ContextMenu>
                                </ui:Button.ContextMenu>
                            </ui:Button>
                            
                            <Separator DockPanel.Dock="Left" Margin="5,0"/>
                            
                            <!-- 列表 -->
                            <ui:Button DockPanel.Dock="Left" Icon="{ui:SymbolIcon TextBulletListSquare24}" Content="列表" Margin="0,0,5,0" Click="ListButton_Click" x:Name="ListButton">
                                <ui:Button.ContextMenu>
                                    <ContextMenu x:Name="ListMenu">
                                        <MenuItem Header="无序列表" Click="InsertList_Click"/>
                                        <MenuItem Header="有序列表" Click="InsertOrderedList_Click"/>
                                        <MenuItem Header="任务列表" Click="InsertTaskList_Click"/>
                                    </ContextMenu>
                                </ui:Button.ContextMenu>
                            </ui:Button>
                            
                            <Separator DockPanel.Dock="Left" Margin="5,0"/>
                            
                            <!-- 插入 -->
                            <ui:Button DockPanel.Dock="Left" Icon="{ui:SymbolIcon Add24}" Content="插入" Margin="0,0,5,0" Click="InsertButton_Click" x:Name="InsertButton">
                                <ui:Button.ContextMenu>
                                    <ContextMenu x:Name="InsertMenu">
                                        <MenuItem Header="链接" Click="InsertLink_Click"/>
                                        <MenuItem Header="图片" Click="InsertImage_Click"/>
                                        <MenuItem Header="代码" Click="InsertCode_Click"/>
                                        <MenuItem Header="引用" Click="InsertQuote_Click"/>
                                        <Separator/>
                                        <MenuItem Header="分隔线" Click="InsertHorizontalRule_Click"/>
                                        <MenuItem Header="表格" Click="InsertTable_Click"/>
                                    </ContextMenu>
                                </ui:Button.ContextMenu>
                            </ui:Button>
                        </DockPanel>
                    </Border>

                     <!-- 编辑器和预览左右布局 -->
                     <Grid Grid.Row="1" Margin="0">
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition x:Name="EditorColumn" Width="*" MinWidth="300"/>
                             <ColumnDefinition x:Name="EditorSplitterColumn" Width="5"/>
                             <ColumnDefinition x:Name="PreviewColumn" Width="*" MinWidth="300"/>
                         </Grid.ColumnDefinitions>

                         <!-- 编辑器区域 -->
                         <Border x:Name="EditorBorder" Grid.Column="0" Margin="0,0,0,0"
                                Background="White"
                                CornerRadius="0"
                                BorderBrush="LightGray"
                                BorderThickness="0">
                            <TextBox x:Name="MarkdownTextBox"
                                    Style="{x:Null}"
                                    AcceptsReturn="True"
                                    AcceptsTab="True"
                                    TextWrapping="NoWrap"
                                    VerticalScrollBarVisibility="Visible"
                                    HorizontalScrollBarVisibility="Auto"
                                    FontFamily="Cascadia Code, Consolas, Courier New"
                                    FontSize="14"
                                    Padding="5"
                                    BorderThickness="0"
                                    Background="White"
                                    TextChanged="MarkdownTextBox_TextChanged"
                                    SelectionChanged="MarkdownTextBox_SelectionChanged"/>
                         </Border>

                         <!-- 垂直分隔条 -->
                         <GridSplitter x:Name="EditorSplitter" Grid.Column="1"
                                      Width="5" Margin="0"
                                      HorizontalAlignment="Stretch"
                                      Background="Transparent"/>

                         <!-- 预览区域 -->
                         <Border x:Name="PreviewBorder" Grid.Column="2" Margin="0,0,5,0"
                                Background="White"
                                CornerRadius="0"
                                BorderBrush="LightGray"
                                BorderThickness="0">
                             <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition x:Name="TocColumn" Width="280" MinWidth="200"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- 目录区域 -->
                                <Border x:Name="TocBorder" Grid.Column="0" 
                                        BorderThickness="0,0,1,0" 
                                        BorderBrush="LightGray"
                                        Padding="5"
                                        Background="White">
                                    <DockPanel>
                                        <TextBlock DockPanel.Dock="Top" 
                                                   Text="目录" 
                                                   FontSize="14" 
                                                   Margin="0,0,0,10"/>
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                                     HorizontalScrollBarVisibility="Auto">
                                            <TreeView x:Name="TocTreeView" 
                                                     BorderThickness="0"
                                                     Background="Transparent">
                                            </TreeView>
                                        </ScrollViewer>
                                    </DockPanel>
                                </Border>
                                
                                <!-- 目录分隔条 -->
                                <GridSplitter Grid.Column="1" 
                                            Width="5"
                                            HorizontalAlignment="Stretch"
                                            Background="Transparent"/>
                                
                                <!-- WebView预览 -->
                               <wv2:WebView2 x:Name="PreviewWebView"
                                        Grid.Column="2"
                                        Margin="5"/>
                            </Grid>
                         </Border>
                     </Grid>
                 </Grid>
            </Grid>
        </DockPanel>
    </Grid>
</ui:FluentWindow>
